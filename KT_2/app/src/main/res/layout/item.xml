<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tenkhoahoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên khoa học:"
        android:textSize="26sp"
        android:textColor="@color/black"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cyclosorus parasiticus"
        android:textSize="26sp"
        android:textColor="@color/black"></TextView>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tenthuonggoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên thường gọi:"
            android:textSize="26sp"
            android:textColor="@color/black"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dương xỉ"
            android:textSize="26sp"
            android:textColor="@color/black"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dactinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặc tính:"
            android:textSize="26sp"
            android:textColor="@color/black"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="thân thảo"
            android:textSize="26sp"
            android:textColor="@color/black"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/maula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Màu lá: "
            android:textSize="26sp"
            android:textColor="@color/black"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xanh"
            android:textSize="26sp"
            android:textColor="@color/black"></TextView>
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>